{
    "manifest_version": 2,
    "name": "GitHub - Readme Table of Contents",
    "short_name": "GitHub Readme TOC",
    "version": "0.1",
    "author": "Arthur Hammer",
    "homepage_url": "https://github.com/a-hammer/github-readme-toc",
    "description": "Add a table of contents to GitHub Readmes. Makes reading easier.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*/*", "https://gist.github.com/*/*"],
            "css": ["css/style.css"],
            "js": ["js/github-toc.js"]
        }
    ],
    "permissions": ["storage"],
    "web_accessible_resources": ["html/options.html"],
    "options_ui": {
        "page": "html/options.html",
        "chrome_style": true
    }
}
